<h1>Editing experiment</h1>

<% form_for(@experiment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :authour %><br />
    <%= f.text_field :authour %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </p>
  <%if logged_in? && current_user.can_create_glossaries?%>
   <p>
    <%= f.label :articles %><br />
    <%= f.text_field :articles %>
  </p>
  <%end%>
 <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @experiment %> |
<%= link_to 'Back', experiments_path %>
