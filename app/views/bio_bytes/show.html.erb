<% content_for :includes do %>
  <%= javascript_include_tag 'sequence_display' %>
  <%= javascript_include_tag 'parts_designer' %>
  <%= javascript_include_tag 'jquery.iphoneui.js' %>
  <%= stylesheet_link_tag 'parts_designer' %> 
<%end%>

<% content_for :title do %>
  <%=h @byte.name %>
<% end %>

<% content_for :header do %>
<div id="header">
  <%= image_tag( image_path( @byte.icon, :png), :class => "icon_image" ) unless @byte.icon.blank? %> 
  <h1><%=h @byte.name %></h1>
  <p>Part Information and Sequence</p>

  <div id="header-toolbar" >
    <ul>
    </ul>
  </div>
</div>
<%end%>

<div class=description>
  <%= image_tag( step_image_path( @byte.function_image ), :class => "function_image" ) unless @byte.function_image.blank? %>
  <p><i><%=h @byte.description%></i></p>
  <p>Sequence length (without A/B overhangs): <%=@byte.sequence.length%> bp</p>
  <div style="clear:both; height:1px; margin-bottom:-1px;">&nbsp;</div>
</div>

<p>
  <div id="sequence">
  </div>
</p>

<!-- hidden info for sequence display -->
<ol id="parts_list" style="display:none;">
  <li id = "part_<%=@byte.id%>_<%=@byte.id%>" class = "<%=@byte.type %> part" byte_id="byte_<%=@byte.id%>" part_id="part_<%=@byte.id%>" > </li>
</ol>

<%= link_to "Back", :back %>
